<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.kvest.pamatky.storage.dto.BasicSight"/>
        <variable
            name="handler"
            type="com.kvest.pamatky.ui.main.MainListHandler"/>
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dip"
        app:cardElevation="4dip"
        app:cardCornerRadius="8dip"
        android:onClick="@{() -> handler.onSightSelected(item)}">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:image="@{item.profilePhotoSmall}"
            bind:placeholder="@{@drawable/list_placeholder}"
            android:foreground="#55000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dip"
            android:text="@{item.name}"
            android:textColor="#ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end|bottom"
            android:padding="8dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="12dp"
                bind:show_if_waze="@{true}"
                app:srcCompat="@drawable/ic_waze"
                android:onClick="@{() -> handler.onShowInWaze(item)}"/>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_location"
                android:onClick="@{() -> handler.onShowOnMap(item)}"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>